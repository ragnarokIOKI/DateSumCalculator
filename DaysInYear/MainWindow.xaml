<Window x:Class="DaysInYear.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaysInYear"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblResult" Grid.Row="3" HorizontalAlignment="Center"/>
        <Button x:Name="btnCalculate" Grid.Row="2" Margin="25" Content="Вычислить" Click="CalculateButton_Click"/>
        <TextBox x:Name="tbYear" Grid.Row="1" Margin="25"/>
    </Grid>
</Window>
